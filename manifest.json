{
  "manifest_version": 3,
  "name": "Panda Shopping Experience",
  "version": "2.0",
  "description": "Transform Amazon product listings into a modern Netflix-style interface with enhanced features",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.amazon.com/*", "*://*.amazon.co.id/*", "*://*.amazon.co.uk/*", "*://*.amazon.de/*", "*://*.amazon.fr/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": ["wallpaper.jpg"],
    "matches": ["*://*.amazon.com/*", "*://*.amazon.co.id/*", "*://*.amazon.co.uk/*", "*://*.amazon.de/*", "*://*.amazon.fr/*"]
  }]
}
